package ch14;

public class Subway {
	
	int lineNumber;
	int passengerCount;
	int money;
	
	public Subway(int lineNumber) {
		this.lineNumber = lineNumber;
		passengerCount++;
	}
	
	public void take(int money) {
		System.out.println(lineNumber + "번의 승객 수는 " + passengerCount + "명 이고, 수입은? " + money + "이다.");
	}
}
